-- #1 Order of items by price.
SELECT item_name, price
FROM superstore
ORDER BY price;

-- #2 Statistic about the item prices and stock quantity: sum, average, minimum, maximum, and count.
SELECT SUM (price), item_name
FROM superstore
GROUP BY item_name;

SELECT AVG (price), category
FROM superstore
GROUP BY category;

SELECT MIN (price)
FROM superstore;

SELECT MAX (price)
FROM superstore;

SELECT COUNT (stock_quantity)
FROM superstore;

-- #3 What is the price for items in the category of "Kitchen Supplies"?

SELECT *
FROM superstore
WHERE category = "Kitchen Supplies"
ORDER BY stock_quantity;

-- #4 How many air purifiers are in stock?

SELECT item_name, stock_quantity 
FROM superstore
WHERE item_name = "Air Purifier";
